@model BarBob.Models.ViewModels.TableVM

@{
    var successMessage = TempData["success"] as string;
    if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" id="success-alert">
            @successMessage
        </div>
    }
}

<div class="container-fluild mx-4">
    <h1 class="h3 mb-2 text-gray-800">Dinner Management</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Dinner Data Table</h6>
            <div class="col-6 d-flex justify-content-end">
                <button onclick="createTable()" type="button" class="btn btn-outline-primary my-4 btn-lg" data-toggle="modal" data-target="#modalCenter">
                    Create Table
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="">
                <table id="details-table" class="table table-bordered table-hover table-striped" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Table Type</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- create Table Modal -->
<div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form id="tableForm" method="post" autocomplete="off" asp-action="CreateOrUpdateTable">
            <input asp-for="Table.Id" id="tableId" class="form-control" aria-required="true" type="hidden" />
            <div class="modal-content" style="width: 550px">
                <div class="modal-header">
                    <h5 class="modal-title" id="tableFormTitle">Create Table</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col">
                            <h5>Description</h5>
                            <div>
                                <input asp-for="Table.Description" id="tableDescription" class="form-control" aria-required="true" placeholder="" />
                                <span asp-validation-for="Table.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <h5>Table Type</h5>
                            <div>
                                <select asp-for="Table.TableTypeId" class="form-control" aria-required="true">
                                    <option value="">Select Table Type</option>
                                    @if (Model.TableTypeList != null)
                                    {
                                        @foreach (var item in Model.TableTypeList)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Table.TableTypeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/tableDetails.js"></script>
}