@model FeedbackListVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4 text-black fw-bold">BarBob - Make the best momment</h3>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/image/indoor_view.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/image/cocktail.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/image/patio_view.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2 class="text-black fw-bold about-title-1">About</h2>
    <div class="row border-3 border-black table-bordered">
        <div class="col-md-6">
            <img src="~/image/About_me_img.jpg" alt="Ảnh của tôi" style="width: 100%;">
        </div>
        <div class="col-md-6" style="text-align: left; color: black;">
            <h5 class="fw-bold about-title">WE’VE TEAMED UP WITH OUR FRIENDS AT BAR LAB TO BRING YOU A BAR CONCEPT THAT IS AUTHENTIC, INNOVATIVE AND MIND-BLOWINGLY GOOD.</h5>
            <p class="text-black about-text">Our skilled mixologists shake up the perfect blend of elixirs, syrups and infusions, paired with fragrant herbs, fresh-pressed juices and exotic ingredients.</p>
            <p class="text-black about-text">As James Beard Award semi-finalists & Tale’s of the Cocktail’s Best American Hotel Bar winners, we take our liquor seriously!</p>
        </div>
    </div>

    <h2 class="text-black fw-bold about-title-1">Information</h2>
    <div class="row border-3 border-black table-bordered nav-map">
        <div class="col-md-3">
            <h2 class="text-center text-black fw-bold info-title" style="font-size: 35px;">Direction</h2>
            <p class="text-black info-text">36 Bach Dang Street, Hai Chau, Da Nang, Viet Nam</p>

            <h2 class="text-center text-black fw-bold info-title" style="font-size: 35px;">TelePhone</h2>
            <p class="text-black info-text">02363929999</p>

            <h2 class="text-center text-black fw-bold info-title" style="font-size: 35px;">Email</h2>
            <p class="text-black info-text">TrongThinh2602@gmail.com</p>
        </div>
        <div class="col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d61346.73112155577!2d108.18703891953123!3d16.056629633769003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142183afab4a42d%3A0xd52dbe9e28e83835!2zS2jDoWNoIHPhuqFuIE5vdm90ZWwgxJDDoCBO4bq1bmc!5e0!3m2!1svi!2s!4v1716717489278!5m2!1svi!2s" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>

    <br />
    @* Event page *@
    <div class="row border-3 nav-tag">
        <div class="col-md-6">
            <img src="~/image/fireworks-festival.jpg" style="width: 100%;" />
        </div>
        <div class="col-md-6">
            <div class="col-brand-5">
                <div class="col-brand-4">
                    <h2 class="h2-title-brand">Happenings</h2>
                    <p class="text-black text-brand">Check out our current events</p>
                    <a class="home-btn btn-a" asp-controller="Home" asp-action="OurEvent">Learn more</a>
                </div>
            </div>
        </div>
    </div>

    <br />
    @* Book event *@
    <div class="row border-3 nav-tag">
        <div class="col-md-6">
            <div class="col-brand-5">
                <div class="col-brand-4">
                    <h2 class="h2-title-brand">Private Events</h2>
                    <p class="text-black text-brand">Have your next event with us!</p>
                    <a class="home-btn btn-a">Book now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/image/prv.jpg" style="width: 100%; height: 400px;" />
        </div>
    </div>

    @* Reservations *@
    <div class="row border-3 nav-tag">
        <div class="col-md-6" style="margin-top: 15px;">
            <img src="~/image/reservation.jpg" style="width: 100%;" />
        </div>
        <div class="col-md-6">
            <div class="col-brand-5">
                <div class="col-brand-4">
                    <h2 class="h2-title-brand">Reservations</h2>
                    <p class="text-black text-brand">Join us for a delicious meal and great drinks.</p>
                    <a class="home-btn btn-a" asp-controller="Reservation" asp-action="Index">Make a Reservation</a>
                </div>
            </div>
        </div>
    </div>

    <br />
    @* Menu *@
    <div class="row border-3 nav-tag">
        <div class="col-md-6">
            <div class="col-brand-5">
                <div class="col-brand-4">
                    <h2 class="h2-title-brand">Our Menus</h2>
                    <p class="text-black text-brand">Check out our current offerings.</p>
                    <a class="home-btn btn-a" asp-controller="Home" asp-action="Menu">View Menus</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/image/menu.jpg" style="width: 100%; height: 400px;" />
        </div>
    </div>

    <div id="feedback-list" class="feedback-container">
        
        @foreach (var feedback in Model.RecentFeedbacks)
        {
            <div class="feedback-card">
                <div class="feedback-header">
                    <div class="feedback-user">
                        <span class="user-name">@feedback.FullName</span>
                        <span class="feedback-title">@feedback.Title</span>
                    </div>
                    <span class="feedback-date">@feedback.FeedbackDate.ToString("g")</span>
                </div>
                <div class="feedback-body">
                    <p class="feedback-status">@feedback.Status</p>
                    @if (feedback.Images != null && feedback.Images.Count > 0)
                    {
                        <div class="feedback-images">
                            @foreach (var image in feedback.Images)
                            {
                                <img src="@Url.Content("~/feedback/" + image)" alt="Feedback Image" class="feedback-image" />
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <button type="button" class="home-btn btn-a" data-toggle="modal" data-target="#exampleModalLong">More</button>

        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Feedback list</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="feedback-container">

                        @foreach (var feedback in Model.AllFeedbacks)
                        {
                            <div class="feedback-card">
                                <div class="feedback-header">
                                    <div class="feedback-user">
                                        <span class="user-name">@feedback.FullName</span>
                                        <span class="feedback-title">@feedback.Title</span>
                                    </div>
                                    <span class="feedback-date">@feedback.FeedbackDate.ToString("g")</span>
                                </div>
                                <div class="feedback-body">
                                    <p class="feedback-status">@feedback.Status</p>
                                    @if (feedback.Images != null && feedback.Images.Count > 0)
                                    {
                                        <div class="feedback-images">
                                            @foreach (var image in feedback.Images)
                                            {
                                                <img src="@Url.Content("~/feedback/" + image)" alt="Feedback Image" class="feedback-image" />
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="home-btn btn-a" style="display: inline;" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <script>
        $(document).ready(function () {
            jQuery.fn.carousel.Constructor.TRANSITION_DURATION = 0;
        });
    </script>
}